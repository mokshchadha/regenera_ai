{
  "tasks": {
    "dev": "deno run --watch --allow-net --allow-env --allow-read --allow-write main.ts",
    "server": "deno run --allow-net --allow-env --allow-read --allow-write server.ts",
    "test": "deno test --allow-net --allow-env --allow-read --allow-write",
    "test-db": "deno run --allow-net --allow-env test-database.ts"
  },
  "imports": {
    "@google/generative-ai": "npm:@google/generative-ai@^0.24.1",
    "@std/assert": "jsr:@std/assert@1",
    "postgres": "https://deno.land/x/postgres@v0.17.0/mod.ts"
  },
  "permissions": {
    "net": [
      "generativelanguage.googleapis.com",
      "ec2-3-235-177-45.compute-1.amazonaws.com"
    ],
    "env": [
      "GOOGLE_AI_API_KEY",
      "DB_CONNECTION_URI",
      "DATABASE_URL"
    ]
  }
}
